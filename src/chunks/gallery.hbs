<div class="dke_gallery-container">
  <h4>Галерея</h4>
  
  <!-- Галерея на десктопе -->
  <div class="dke_gallery" id="dke_gallery">
    <div class="dke_gallery__item">
      <a href="src/images/gallery1.jpg">
        <img src="src/images/gallery-small1.jpg" alt="">
      </a>
    </div>
    <div class="dke_gallery__item">
      <a href="src/images/gallery2.jpg">
        <img src="src/images/gallery-small2.jpg" alt="">
      </a>
    </div>
    <div class="dke_gallery__item">
      <a href="src/images/gallery3.jpg">
        <img src="src/images/gallery-small3.jpg" alt="">
      </a>
    </div>
    <div class="dke_gallery__item">
      <a href="src/images/gallery4.jpg">
        <img src="src/images/gallery-small4.jpg" alt="">
      </a>
    </div>
  </div>

  <!-- Попап галереи -->
  <div id="blueimp-gallery" class="blueimp-gallery blueimp-gallery-controls" data-use-bootstrap-modal="false">
    <div class="slides"></div>
    <h3 class="title"></h3>
    <a class="prev"></a>
    <a class="next"></a>
    <a class="close"></a>
    <a class="play-pause"></a>
    <ol class="indicator"></ol>
  </div>

  <!-- Слайдер в мобильной версии -->
  <div class="dke_gallery-carousel">
    <div id="blueimp-gallery-carousel" class="blueimp-gallery blueimp-gallery-carousel dke_gallery-carousel" aria-label="image carousel">
      <div class="slides" aria-live="off"></div>
      <h3 class="title"></h3>
      <a class="prev" aria-controls="blueimp-gallery-carousel" aria-label="previous slide"></a>
      <a class="next" aria-controls="blueimp-gallery-carousel" aria-label="next slide"></a>
      <ol class="indicator"></ol>
    </div>
  </div>

  <!-- Картинки для слайдера -->
  <div id="dke_slider-items" class="dke_slider-items">
    <a href="src/images/gallery1.jpg" title=""  data-gallery class="excursion_gallery_click_photo">
      <img src="src/images/gallery1.jpg" alt="Метеор в Петергоф - 0" />
    </a>
    <a href="src/images/gallery2.jpg" title=""  data-gallery class="excursion_gallery_click_photo">
      <img src="src/images/gallery2.jpg" alt="Метеор в Петергоф - 1" />
    </a>
    <a href="src/images/gallery3.jpg" title=""  data-gallery class="excursion_gallery_click_photo">
      <img src="src/images/gallery3.jpg" alt="Метеор в Петергоф - 2" />
    </a>
    <a href="src/images/gallery4.jpg" title=""  data-gallery class="excursion_gallery_click_photo">
      <img src="src/images/gallery4.jpg" alt="Метеор в Петергоф - 2" />
    </a>
  </div>
</div>
